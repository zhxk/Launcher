<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_135"
    android:id="@+id/health_news_root">

    <ImageView
        android:id="@+id/new_img"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_110"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_30"/>

    <TextView
        android:id="@+id/new_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/new_img"
        android:layout_marginEnd="@dimen/dp_30"
        style="@style/text_SM_grey"
        android:gravity="start|center_vertical"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_10"
        android:text="很费劲阿卡恢复快接啊哈萨克的发货可拉伸的疯狂了哈市的反馈和喀什付款就阿什顿飞"
        android:maxLines="3"/>

    <View
        android:id="@+id/view_h_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/text_black_alpha_30"
        android:layout_below="@id/new_img"/>

</RelativeLayout>