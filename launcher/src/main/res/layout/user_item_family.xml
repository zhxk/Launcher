<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    app:cardCornerRadius="@dimen/dp_20"
    app:cardElevation="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_family_item_bg_selector"
        android:minHeight="@dimen/dp_240">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_family_avatar"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_marginStart="@dimen/dp_30"
            android:src="@drawable/default_family_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_family_name"
            style="@style/text_XXL_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_family_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/user_family_name" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
