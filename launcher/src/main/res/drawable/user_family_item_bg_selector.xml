<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/user_list_bg_checked"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!--angle属性控制渐变方向：0:L->R;90:B->T;180:R->L;270:T->B-->
            <gradient
                android:startColor="#44AAFF"
                android:endColor="#61B4FF"
                android:type="linear"
                android:angle="0"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <!--angle属性控制渐变方向：0:L->R;90:B->T;180:R->L;270:T->B-->
            <gradient
                android:startColor="#44AAFF"
                android:endColor="#61B4FF"
                android:type="linear"
                android:angle="0"/>
        </shape>
    </item>

</selector>